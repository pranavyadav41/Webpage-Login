<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span class="sub text-muted">Login for the existing user</span>
            <% if(locals.logout){%>
                <div class="alert alert-success text-center ">
                   Logout Successfully....
                </div>
            <%}%> 
             <% if(locals.message){%>
                <div class="alert alert-danger text-center ">
                   <%= message%>
                </div>
            <%}%> 
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted d-flex justify content-start">Register your email</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control mt-2" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-success mt-2 rounded-pill">Submit</button>
        </form>
    </div>
</div>


<%- include('footer') -%>
    
